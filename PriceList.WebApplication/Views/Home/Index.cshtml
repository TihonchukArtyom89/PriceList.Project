@model ProductsListViewModels





<div class="row m-1 p-1">
    <div id="categories" class="col-1">
        <vc:navigation-menu />
    </div>
    <div class="col-11">
        <div class="mx-1">
            <h4 class="card-text "> ТОВАРЫ </h4>
            <button class="btn btn-primary text-white mb-2" data-bs-toggle="modal" data-bs-target="#AddProductForm"> <i class="fa-solid  fa-plus"> Добавить новый товар</i></button>
        </div>
        @foreach (var p in Model?.Products ?? Enumerable.Empty<Product>())
        {
            <partial name="ProductSummary" model="p" />
        }
        <div page-model="@Model?.PagingInfo"
             page-action="Index"
             page-classes-enabled="true"
             page-class="btn"
             page-class-normal="btn-outline-dark"
             page-class-selected="btn-primary"
             page-url-category="@Model?.CurrentCategory!"
             class="btn-group pull-right m-1">
        </div>
    </div>
</div>


@await Html.PartialAsync("AddProductForm", new Product())