@model Product

<div class="modal fade" id="AddProductForm" tabindex="-1" aria-labelledby="AddProductFormLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="AddProductFormLabel">ПРОДУКТ</h1>
                <button type="reset" onclick="resetValidation()" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-md-12">
                        <form asp-action="Create" method="post">
                            @* <div asp-validation-summary="All" class="text-danger"></div> *@
                            <input type="hidden" asp-for="ProductID" />
                            <div class="form-group">
                                <label asp-for="ProductName" class="control-label"></label>
                                <span asp-validation-for="ProductName" class="text-danger"></span>
                                <input asp-for="ProductName" class="form-control" />
                            </div>
                            <div class="form-group">
                                <label asp-for="CategoryID" class="control-label">Категория продукта</label>
                                <span asp-validation-for="CategoryID" class="text-danger"></span>
                                <select asp-for="CategoryID" asp-items="@ViewBag.Categories"  class="form-control"></select>
                            </div>
                            <div class="form-group">
                                <label asp-for="ProductDescription" class="control-label"></label>
                                <span asp-validation-for="ProductDescription" class="text-danger"></span>
                                <input asp-for="ProductDescription" class="form-control" />
                            </div>
                            <div class="form-group">
                                <label asp-for="ProductPrice" class="control-label"></label>
                                <span asp-validation-for="ProductPrice" class="text-danger"></span>
                                <input asp-for="ProductPrice" class="form-control" />
                            </div>
                            <div class="modal-footer">
                                <button type="reset" onclick="resetValidation()" class="btn btn-secondary" data-bs-dismiss="modal">Закрыть</button>
                                <button type="submit" class="btn btn-primary" data-bs-save="modal">Сохранить</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>