@model Product

<div class="modal fade" id="ProductForm" tabindex="-1" aria-labelledby="ProductFormLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="ProductFormLabel">ПРОДУКТ</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-md-12">
                        <form asp-action="Create" method="post">
                            <div asp-validation-summary="ModelOnly" class="text-danger">Ошибки валидации</div>
                            <input type="hidden" asp-for="ProductID" />
                            <div class="form-group">
                                <label asp-for="ProductName" class="control-label"></label>
                                <input asp-for="ProductName" class="form-control" />
                                <span asp-validation-for="ProductName" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="CategoryID" class="control-label">Категория продукта</label>
                                <select asp-for="CategoryID" class="form-control">
                                    <option value="">Выберите категорию продукта</option>
                                    @foreach (Category c in ViewBag.Categories)
                                    {
                                        @* как передать выбранный пункт этого списка ???? *@
                                        <option value="@c.CategoryID">@c.CategoryName</option>
                                    }
                                </select>
                            </div>
                            <div class="form-group">
                                <label asp-for="ProductDescription" class="control-label"></label>
                                <input asp-for="ProductDescription" class="form-control" />
                                <span asp-validation-for="ProductDescription" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="ProductPrice" class="control-label"></label>
                                <input asp-for="ProductPrice" class="form-control" />
                                <span asp-validation-for="ProductPrice" class="text-danger"></span>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Закрыть</button>
                                <input type="submit" class="btn btn-primary" value="Сохранить" />
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

